    <script>
      function selConvertedText() {
        var copyText = document.getElementById("txtbinary");
        copyText.select();
        copyText.setSelectionRange(0, 99999);
        document.execCommand("copy");
        //alert("Text Copied");
      }

      function frm1clrPlaintext() {
        document.getElementById("frm1txtPlain").value = "";
      }

      function frm1selConvertedtext() {
        var copyText = document.getElementById("frm1txtConverted");
        copyText.select();
        copyText.setSelectionRange(0, 99999);
        document.execCommand("copy");
        //alert("Text Copied");
      }

      function frm2clrPlaintext() {
        document.getElementById("frm2txtConverted").value = "";
      }

      function frm2selConvertedtext() {
        var copyText = document.getElementById("frm2txtPlain");
        copyText.select();
        copyText.setSelectionRange(0, 99999);
        document.execCommand("copy");
        //alert("Text Copied");
      }
    </script>

    <style>
      @-webkit-keyframes downarrow {
        0% {
          -webkit-transform: translateY(0);
          opacity: 0.4;
        }
        100% {
          -webkit-transform: translateY(0.4em);
          opacity: 0.9;
        }
      }

      input[type="submit"] {
        position: absolute;
        right: 220px;
        width: 140px;
        height: 50px;
        border: 3px solid green;
      }

      .arrow {
        border-color: transparent;
        border-style: solid;
        border-width: 0 2em;
        display: block;
        height: 0;
        margin: auto;
        opacity: 0.4;
        text-indent: -9999px;
        transform-origin: 50% 50%;
        width: 0;
      }

      .down {
        -webkit-animation: downarrow 0.6s infinite alternate ease-in-out;
        border-top: 2em solid darkorchid;
      }
    </style>

    <title>B1nCrypti0n</title>
  </head>

  <body style="background-color: black">
    <form name="frm1" action="/Encrypt" method="POST" autocomplete="off">
      <section>
        <div class="container-fluid" style="color: white">
          <h1
            class="text-center mb-5 text-uppercase"
            style="padding-top: 110px"
          >
            Welcome To B1nCrypti0n
          </h1>

          <div class="container">
            <h3 class="text-center mb-5 text-uppercase">Encrypt Here</h3>
            <a class="arrow down">Down</a>
            <br />
          </div>
          <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6" style="margin-bottom: 30px">
              <textarea
                style="background-color: black; color: lime"
                type="text"
                rows="6"
                cols="80"
                id="frm1txtPlain"
                name="frm1txtPlain"
                class="form-control"
                placeholder="Write Plain Text Here"
              >
<%= plaintext %></textarea
              >
              <br />
              <center>
                <button id="txtplainclear" type="submit" class="btn btn-dark">
                  Convert
                </button>

                <button
                  id="txtplainclear"
                  type="button"
                  onclick="frm1clrPlaintext()"
                  class="btn btn-dark"
                >
                  Clear
                </button>
              </center>

              <br /><br /><br />
              <textarea
                style="background-color: black; color: lime"
                type="text"
                rows="6"
                cols="80"
                id="frm1txtConverted"
                name="frm1txtConverted"
                class="form-control"
                onkeyup="textToBin()"
                placeholder="B1nCrypted Text"
              >
<%= convertit %></textarea
              >

              <br />
              <center>
                <button
                  id="txtplainclear"
                  type="button"
                  onclick="frm1selConvertedtext()"
                  class="btn btn-dark"
                >
                  Copy
                </button>
              </center>

              <select class="form-control" id="charsel" hidden="true">
                <option value="">ASCII</option>
                <option value="utf-8" selected="">ASCII/UTF-8</option>
              </select>
            </div>
          </div>
        </div>
      </section>
    </form>

    <form name="frm2" action="/Decrypt" method="POST" autocomplete="off">
      <section>
        <div class="container-fluid" style="color: white">
          <div class="container">
            <h3 class="text-center mb-5 text-uppercase">Decrypt Here</h3>
            <a class="arrow down">Down</a>
            <br />
          </div>
          <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6" style="margin-bottom: 30px">
              <textarea
                style="background-color: black; color: lime"
                type="text"
                rows="6"
                cols="80"
                id="frm2txtConverted"
                name="frm2txtConverted"
                class="form-control"
                placeholder="Enter B1nCrypted Text Here"
              >
<%= newconvertit %></textarea
              >
              <br />
              <center>
                <button id="txtplainclear" type="submit" class="btn btn-dark">
